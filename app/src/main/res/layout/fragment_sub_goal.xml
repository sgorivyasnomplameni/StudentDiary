<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Название подцели -->
    <TextView
        android:id="@+id/subGoalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название подцели"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp"
        android:textColor="?android:textColorPrimary" />

    <!-- Текущий прогресс -->
    <TextView
        android:id="@+id/currentProgressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прогресс: 0/100"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:textColor="?android:textColorSecondary" />

    <!-- Целевая величина -->
    <TextView
        android:id="@+id/targetProgressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Цель: 100"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="?android:textColorSecondary" />

    <!-- Поле для ввода нового прогресса -->
    <EditText
        android:id="@+id/progressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите новый прогресс"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для сохранения -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить" />
</LinearLayout>