<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Пример стиля для текста на днях -->
    <style name="DayTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.Calendar.Date" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Базовый стиль для календаря -->
    <style name="CalendarViewStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/calendar_date_highlight</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
    </style>

    <!-- Стиль для дней недели -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/calendar_weekday_text</item>
    </style>

    <!-- Стиль для дат -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
